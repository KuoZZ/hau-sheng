.services-page
  .content
    padding: 40px 10%
    .col-lg-3
      margin-bottom: 20px
    .col-lg-9
      margin-top: 7px
    .nav-item
      background-color: #e8dfe2
      margin-bottom: 5px
      a
        outline: 0
        color: #9c5e11
        &:focus,
        &:active,
        &:hover
          background-color: #dfbc54
          color: white
          outline: 0
      &.active
        background-color: #dfbc54
        a
          color: white

    h2
      color: #dfbc54
      border-left: 5px solid #dee2e6
      padding-left: 15px
      margin-bottom: 15px

    td
      &.title
        width: 95px
        min-width: 95px
        max-width: 95px
        font-weight: 700
