.contact-us-page
  .content
    margin: 40px 0
    padding: 0 5%
    h1
      border-bottom: 1px solid rgba(0, 0, 0, 0.1)
      padding-bottom: 5px
    .sub-title
      color: grey
      font-size: 28px
      .anchor
        color: red
        font-weight: 700
        cursor: pointer
        margin-top: 5px
    .links
      margin-top: 50px
      .link
        display: flex
        line-height: 0px
        padding: 5px 0
        justify-content: center
        margin-bottom: 10px
        border-radius: 5px
        cursor: pointer
        &.ig
          border: 1px solid red
          color: red
          // .fa-instagram-square
          //   background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
          &:hover
            background: red
            color: white
        &.fb
          border: 1px solid blue
          color: blue
          &:hover
            background: blue
            color: white
        &.line
          border: 1px solid green
          color: green
          &:hover
            background: green
            color: white
        &-description
          margin-left: 5px
          font-size: 16px
          line-height: 50px
  .qr-code-and-id
    margin-top: 20px
    img
      cursor: pointer
    .line-id
      margin-top: 10px
      text-align: center
      color: green
      font-size: 20px
      font-weight: 700